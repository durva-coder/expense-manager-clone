<style>

.table {
    margin: auto;
}
.table-title h2 {
  margin: 7px 0 0;
  font-size: 24px;

}
.table-title {
    padding-bottom: 10px;
    background: #435d7d;
    color: #fff;
    padding: 5px 10px;
    min-width: 100%;
    margin: -20px 0px 10px;
    border-radius: 3px 3px 0 0;
}

.table-title .btn-group {
  float: right;
}

.table-row{
  height: 40px;
}

.table-start {
  color: #566787;
  background: #f5f5f5;
  font-family: 'Varela Round', sans-serif;
  font-size: 17px;
}

.table-responsive {
  margin: 30px 0;
}

.table-wrapper {
  background: #fff;
  /* padding: 20px; */
  border-radius: 3px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .05);

}

table, th, td {
  border: 1px solid black;
  text-align: center;
  border-collapse: collapse;
}

</style>


<div class="container-xl table-container">
    <div class="table-responsive table-start">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row table-row">
                    <div class="col-sm-6">
                        <h2 style="text-align: center;"> View All Transactions 
                        </h2> 
                        
                        <br><br>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Date</th>
                    </tr>
                </thead>
                
                <tbody>
                    <tr>
                        <% transaction.forEach(function(transaction) { %>
                    </tr>
                        <td><%= transaction.types %></td>
                        <td><%= transaction.amount %></td>
                        <td><%= transaction.description %></td>
                        <td><%= transaction.date %></td>

                    <tr>
                        <% }) %>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>

